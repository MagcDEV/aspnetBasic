@using Microsoft.AspNetCore.Components.Routing
<div class="flex justify-between items-center bg-gray-800 text-gray-300 p-4">
    <a href="" class="text-xl font-bold text-white">frontAspBasic</a>
    <button type="button" @onclick="ToggleNavMenu"
        class="text-gray-300 hover:text-gray-100 focus:outline-none">
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" xmlns="https://www.w3schools.com/graphics/svg_intro.asp">
            <path d="M4 6H20M4 12H20M4 18H20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                stroke-width="2" />
        </svg>
    </button>
</div>

<div class="@(collapseNavMenu ? "hidden" : "bg-gray-700 text-gray-300 pt-4 rounded-md")">
    <nav class=" flex flex-col">
        <NavLink class="text-lg px-4 py-2 w-full hover:bg-gray-600 focus:outline-none" href="" Match="NavLinkMatch.All">
            <span class="mr-2 text-xl bi bi-house-door-fill-nav-menu">Home</span>
        </NavLink>
        <NavLink class="text-lg px-4 py-2 w-full hover:bg-gray-600 focus:outline-none" href="counter">
            <span class="mr-2 text-xl bi bi-plus-square-fill-nav-menu">Counter</span>
        </NavLink>
        <NavLink class="text-lg px-4 py-2 w-full hover:bg-gray-600 focus:outline-none" href="weather">
            <span class="mr-2 text-xl bi bi-list-nested-nav-menu">Weather</span>
        </NavLink>
        <NavLink class="text-lg px-4 py-2 w-full hover:bg-gray-600 focus:outline-none" href="games">
            <span class="mr-2 text-xl bi bi-list-nested-nav-menu">Game Store</span>
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
